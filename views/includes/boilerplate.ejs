   body, html {
  background-color: #fafafa;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen,
    Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
  margin: 0;
  padding: 0;
  min-height: 100vh;
}

/* Container for all cards */
.page-container {
  max-width: 100vw;
  margin: 0;
  padding: 0 0 0 0;
}


/* Card style */
.card-ig {
  width: 100%;
  border: 1px solid #dbdbdb;
  background-color: #fff;
  border-radius: 6px;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
  margin-bottom: 32px;
  overflow: hidden;
  transition: transform 0.2s ease;
}

.card-ig:hover {
  transform: translateY(-2px);
}

/* Image inside the card */
.card-img-top {
  width: 100%;
  height: 300px;
  object-fit: cover;
}

/* Card body */
.card-body {
  padding: 16px;
}

/* Title style */
.title {
  font-weight: 700;
  font-size: 18px;
  color: #262626;
  padding-bottom: 8px;
  border-bottom: 2px solid #3897f0; /* Instagram blue */
  margin-bottom: 12px;
  letter-spacing: 0.03em;
}

/* Username */
.username {
  font-weight: 600;
  font-size: 14px;
  margin-bottom: 8px;
  color: #262626;
}

/* Status badge styles */
.status-badge {
  font-size: 12px;
  padding: 3px 8px;
  border-radius: 12px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  display: inline-block;
  margin-bottom: 8px;
}

.status-pending {
  background-color: #8e8e8e;
  color: white;
}

.status-in_progress {
  background-color: #fcb045;
  color: white;
}

.status-resolved {
  background-color: #4caf50;
  color: white;
}

/* Meta info */
.location, .category {
  font-size: 13px;
  color: #999;
}

/* Description */
.description {
  margin-top: 12px;
  font-size: 14px;
  color: #333;
}

/* Footer (votes + date) */
.footer {
  padding: 12px 16px;
  border-top: 1px solid #efefef;
  font-size: 13px;
  color: #999;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.footer span {
  font-weight: 600;
  color: #262626;
}

/* Responsive adjustments */
@media (max-width: 576px) {
  .page-container {
    padding: 100px 8px 32px;
  }

  .card-ig {
    border-radius: 0;
    margin-bottom: 24px;
  }

  .card-img-top {
    height: 250px;
  }
}

.comment-sidebar {
  position: fixed;
  top: 0;
  right: -400px;
  width: 350px;
  height: 100%;
  background: #f8f9fa;
  border-left: 1px solid #ccc;
  box-shadow: -2px 0 8px rgba(0,0,0,0.1);
  padding: 20px;
  overflow-y: auto;
  transition: right 0.3s ease-in-out;
  z-index: 1000;
}

.comment-sidebar.open {
  right: 0;
}

.sidebar-content ul {
  list-style: none;
  padding: 0;
}

.sidebar-content ul li {
  margin-bottom: 8px;
  padding-bottom: 6px;
  border-bottom: 1px solid #ddd;
}

.auth-container, .signup-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 80vh;
}
